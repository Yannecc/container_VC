USER_MAIL="$(cat user_info | grep $UID | tr -s " " | cut -d " " -f 2)"
USER_NAME="$(cat user_info | grep $UID | tr -s " " | cut -d " " -f 3)"

echo "> ${USER_NAME} (${USER_MAIL})"

docker build \
    --tag="alpineintuition/dev_$UID:latest" \
    --build-arg UID=$UID \
    --build-arg GID=1010 \
    --build-arg USER_MAIL=$USER_MAIL \
    --build-arg USER_NAME=$USER_NAME \
    .

